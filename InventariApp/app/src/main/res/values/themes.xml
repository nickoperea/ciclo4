<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InventariApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceHeadline1">@style/MyHeadLine</item>
        <item name="textAppearanceSubtitle1">@style/Theme.InventariApp.Subtitle1</item>
        <item name="textAppearanceBody1">@style/Theme.InventariApp.Body1</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/claregreen</item>

    </style>

    <style name="Theme.InventariApp.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" >
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.InventariApp.Body1" parent="TextAppearance.MaterialComponents.Body1" >
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Theme.InventariApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyHeadLine" parent="TextAppearance.MaterialComponents.Headline1">

    </style>

    <style name="Theme.InventariApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InventariApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>